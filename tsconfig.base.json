{
  "compilerOptions": {
    "composite": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "paths": {
      "react-components": ["./packages/react-components/src/index.ts"],
      "react-demo": ["./packages/react-demo/src/main.tsx"]
    }
  },
  "include": ["src"]
}
